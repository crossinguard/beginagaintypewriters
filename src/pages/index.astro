---
// import base layout and hero component
import Layout from "../layouts/Layout.astro";
import HomeHero from "../components/hero/HomeHero.astro";

// import page content and metadata from 'src/content/pages'
import { getEntry, render } from "astro:content";

const entry = await getEntry("pages", "home");
if (!entry) {
	// Handle Error, for example:
	throw new Error("Could not find page content");
}
const { Content, headings } = await render(entry);
---

<Layout title={entry.data.title}>
	<HomeHero />
	<Content />
</Layout>
