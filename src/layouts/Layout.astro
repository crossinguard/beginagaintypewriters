---
import Nav from "../components/navigation/PrimaryNav.astro";
import Footer from "../components/footer/Footer.astro";

import "../css/global.css";

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title} | Begin Again Typewriters</title>

		<!-- Google Fonts -->
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link
			href="https://fonts.googleapis.com/css2?family=Cutive+Mono&family=Source+Code+Pro:ital,wght@0,200..900;1,200..900&display=swap"
			rel="stylesheet"
		/>
		<link
			rel="preload"
			as="font"
			href="/fonts/SenatoriumSm3-Regular.woff2"
			crossorigin
		/>
	</head>
	<body>
		<Nav />
		<main class="wrapper flow">
			<slot />
		</main>
		<Footer />
	</body>
</html>
